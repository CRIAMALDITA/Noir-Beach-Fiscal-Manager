<Window x:Class="SalesRestaurantSystem.ConfirmPasswordMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesRestaurantSystem"
        mc:Ignorable="d"
        Title="Password Prompt" Height="225" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Viewbox>
            <Grid Height="225" Width="300">
                <TextBlock Text="Enter Password:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,69,0,0" Height="25" Width="125" TextAlignment="Center" FontSize="18"/>
                <PasswordBox x:Name="passwordBox" Width="264" Height="26" VerticalAlignment="Center" HorizontalAlignment="Center" KeyDown="Confirm_KeyDown"/>
                <Button Content="OK" Width="76" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,137,0,0" Click="OnOkButtonClick"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
